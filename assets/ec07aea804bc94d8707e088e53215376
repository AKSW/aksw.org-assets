	<h2 class="item-title" itemprop="headline">
			Pädagogische Weiterbildung für Seiteneinsteiger		</h2>




		<dl class="article-info muted">

		
			<dt class="article-info-term">
									Details							</dt>

			
			
										<dd class="category-name">
																		Kategorie: <a href="/index.php/7-startseite.html" itemprop="genre">Startseite</a>							</dd>			
										<dd class="published">
				<span class="icon-calendar"></span>
				<time datetime="2023-09-28T07:35:23+00:00" itemprop="datePublished">
					Veröffentlicht: 28. September 2023				</time>
			</dd>					
												<dd class="create">
					<span class="icon-calendar"></span>
					<time datetime="2023-09-28T07:35:23+00:00" itemprop="dateCreated">
						Erstellt: 28. September 2023					</time>
			</dd>			
			
										<dd class="hits">
					<span class="icon-eye-open"></span>
					<meta itemprop="interactionCount" content="UserPageVisits:80" />
